<launch>
    <node name="hokuyo" pkg="hokuyo_node" type="hokuyo_node" respawn="false" output="screen">
        <param name="calibrate_time" type="bool" value="false"/>
        <param name="frame_id" value="laser"/>
        <param name="port" type="string" value="/dev/hokuyo"/>
        <param name="min_ang" type="double" value="-1.7"/>
        <param name="max_ang" type="double" value="1.7"/>
        <param name="intensity" type="bool" value="false"/>
    </node>

    <node pkg="tf" type="static_transform_publisher" name="base_link_to_hokuyolaser" args="1.58, 0.0, 1.89 0.00 0 0 /base_link /laser 100" />
</launch>