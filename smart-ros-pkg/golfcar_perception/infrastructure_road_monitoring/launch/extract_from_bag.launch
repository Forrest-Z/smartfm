<launch>

    <node pkg="image_transport" type="republish" name="republish"
        args="compressed in:=camera/image_raw out:=cam" />

    <node pkg="infrastructure_road_monitoring" type="background_extractor" name="background_extractor" output="screen">
        <remap from="camera" to="cam" />
    </node>

    <include file="$(find infrastructure_road_monitoring)/launch/motion_detect.launch">
        <arg name="camera_topic" value="cam" />
    </include>

</launch>