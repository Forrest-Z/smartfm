<launch>
    <node pkg="tf" type="static_transform_publisher" name="base_link_to_robot2_scan" args="1.45, 0.0, 1.39 0 0 0 /robot_2/base_link /robot_2/laser 10" />

    <node pkg="sicktoolbox_wrapper" type="sicklms" name="sicklms" ns="robot_2">
        <param name="port" value="/dev/ftdi2"/>
        <remap from ="scan" to="scan"/>
        <param name="resolution" value="0.5"/>
        <param name="frame_id" value="/robot_2/laser"/>
        <param name="baud" value="500000"/>
    </node>

</launch>
